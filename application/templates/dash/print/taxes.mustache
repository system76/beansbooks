	{{#sale_totals}}
		<tr>
			<td style="background: {{backgroundlightgreen}}; -webkit-print-color-adjust:exact; font-weight: bold; text-align: left; width: 20%; padding-left: 10px; height: 24px; line-height: 24px; font-size: 12px;">
				Tax Totals
			</td>
			<td style="background: {{backgroundlightgreen}}; -webkit-print-color-adjust:exact; font-weight: bold; text-align: right; width: 20%; padding-right: 10px; height: 24px; line-height: 24px; font-size: 12px;">
